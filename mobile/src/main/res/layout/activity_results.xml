<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/img_background_mobile_head"
    tools:context="com.georgewilliam.speedforce.projectspeedforce.ResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:contentDescription="@string/asset_description"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_logo_blue_filled" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cast_intro_overlay_focus_radius"
            android:textColor="@color/colorTextBlack"
            android:text="@string/results_textview_title_string" />

        <View
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:background="@color/colorTextBlack"/>

        <ScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First Row -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <!-- Duration -->
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/results_imageview_duration_id"
                            android:contentDescription="@string/asset_description"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_timer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_duration_string" />

                        <TextView
                            android:id="@+id/results_textview_duration_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_unavailable_string" />

                    </LinearLayout>

                    <!-- Distance -->
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/results_imageview_distance_id"
                            android:contentDescription="@string/asset_description"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_waypoints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_distance_string" />

                        <TextView
                            android:id="@+id/results_textview_distance_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_unavailable_string" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/results_imageview_burntcalories_id"
                            android:contentDescription="@string/asset_description"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_fire" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_burntcalories_string" />

                        <TextView
                            android:id="@+id/results_textview_burntcalories_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_unavailable_string" />

                    </LinearLayout>

                    <!-- BPM -->
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/results_imageview_averagebpm_id"
                            android:contentDescription="@string/asset_description"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_heart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_averagebpm_string" />

                        <TextView
                            android:id="@+id/results_textview_averagebpm_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_unavailable_string" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Third Row -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <!-- Temperature -->
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/results_imageview_temperature_id"
                            android:contentDescription="@string/asset_description"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_thermometer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_temperature_string" />

                        <TextView
                            android:id="@+id/results_textview_temperature_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_unavailable_string" />

                    </LinearLayout>

                    <!-- Climate -->
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/results_imageview_climatecondition_id"
                            android:contentDescription="@string/asset_description"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/img_weather_dimmed" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_climatecondition_string" />

                        <TextView
                            android:id="@+id/results_textview_climatecondition_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/colorTextBlack"
                            android:text="@string/results_textview_unavailable_string" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/results_button_accept_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/colorSuccessBlue"
                    android:textColor="@color/colorTextWhite"
                    android:text="@string/results_button_accept_string" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
